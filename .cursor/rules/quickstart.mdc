// scripts/add-recipe-interactive.js
const { Client } = require('@notionhq/client');
const readline = require('readline');
require('dotenv').config();

const notion = new Client({ auth: process.env.NOTION_API_KEY });

async function searchIngredient(name) {
  // Query Notion Ingredients DB
  const results = await notion.databases.query({
    database_id: process.env.NOTION_INGREDIENTS_DB_ID,
    filter: {
      property: 'Item',
      title: { contains: name }
    }
  });
  return results;
}

async function createRecipe(recipeData) {
  // Create in Notion Recipes DB
  await notion.pages.create({
    parent: { database_id: process.env.NOTION_RECIPES_DB_ID },
    properties: {
      'Recipe Name': { title: [{ text: { content: recipeData.name } }] },
      'Cost ($)': { number: recipeData.totalCost },
      // ... etc
    }
  });
}

